<?xml version="1.0"?>
<phpunit
    bootstrap="tests/bootstrap.php"
    backupGlobals="false"
    colors="true"
    convertErrorsToExceptions="true"
    convertNoticesToExceptions="true"
    convertWarningsToExceptions="true"
    verbose="true"
>
    <testsuites>
        <testsuite name="Security Tests">
            <directory>tests/security</directory>
        </testsuite>
        <testsuite name="Debugging Tests">
            <directory>tests/debugging</directory>
        </testsuite>
        <testsuite name="Pattern Validation Tests">
            <directory>tests/patterns</directory>
        </testsuite>
        <testsuite name="Template Validation Tests">
            <directory>tests/templates</directory>
        </testsuite>
        <testsuite name="Code Quality Tests">
            <directory>tests/code-quality</directory>
        </testsuite>
    </testsuites>
    <php>
        <!-- Explicitly unset WP config to force standalone mode -->
        <env name="WP_PHPUNIT__TESTS_CONFIG" value="" force="true"/>
        <env name="WP_TESTS_DIR" value="" force="true"/>
    </php>
</phpunit>
